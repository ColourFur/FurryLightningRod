extends layout

block content
    link(rel="stylesheet", href="/stylesheets/profile.css")
    script(src="/javascripts/profile.js")
    .row
        //- 嵌套还是用了原版html XD
        <h3><i class="fa fa-angle-left btn-back" aria-hidden="true" onclick="j2where('/space')"></i>    个人信息设置</h3>
    hr

    //- 个人信息（头像位
    .container
        .row
            .col-lg-8.col-xs-12
                .alert.alert-info.d-none(role="alert")
                    strong.alert-heading 上传成功
                .alert.alert-success.d-none(role="alert")
                    strong.alert-heading 操作成功
                .alert.alert-danger.d-none(role="alert")
                    strong.alert-heading 操作失败
                dl
                    label.db#profile-nick(for="userProfilNick") 昵称（建议使用圈名）
                    input.dc.form-control#profile-nick-input(type="text" value = userInfo.nick)
                dl
                    label.db#profile-name(for="userProfilName") 用户名（用于登录）
                    input.dc.form-control#profile-name-input(type="text" value = userInfo.username)
                dl
                    label.db#profile-email(for="userProfilEmail") 邮箱（暂不支持更新）
                    input.dc.form-control#profile-email-input(type="text" disabled="true" value = userInfo.email)
                dl
                    label.db#profile-QQ(for="userProfilQQ") QQ
                    input.dc.form-control#profile-QQ-input(type="text" value = userInfo.QQ)
            .col-lg-4.col-xs-12
                dt
                    +outputAvatarHD(userInfo.avatarPath)
                    form.d-none#editAvatar()
                        .custom-file
                            input.form-control.custom-file-input#file1(type="file" name="avatar" onchange="uploadAvatar()")
                            label.custom-file-lavel(for="file1") 选择文件
                            input(type="submit")
                    button.btn.btn-outline-primary.btn-block.db#btn-avatar(onclick='showEditAvatar()') 编辑头像
                    button.btn.btn-primary.btn-block.db#btn-save(onclick='saveProfile()') 保存

